{
  "name": "readio-v2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clear:build": "rm -rfv ./public/*.png && rm -rfv  ./public/*.css && rm -rfv  ./public/*.js",
    "dev:start": "nodemon index.js",
    "dev:build": "webpack --env.NODE_ENV=development --mode development -w",
    "lint": "eslint --fix server && eslint --fix dev",
    "nu:clear": "yarn run clear:build && rm -rfv node_modules && rm -rfv yarn.lock && yarn install",
    "prod:build": "webpack --mode production",
    "prettier": "prettier --write '*.{js,jsx,scss,graphql}'",
    "start": "node index.js",
    "validate": "yarn run lint && yarn run prettier './dev' --list-different && yarn run prettier './server' --list-different",
    "heroku-prebuild": "yarn install --production=false",
    "heroku-postbuild": "yarn run prod:build"
  },
  "dependencies": {
    "@babel/preset-react": "^7.7.4",
    "@babel/runtime": "^7.7.5",
    "apollo-boost": "^0.4.4",
    "apollo-client": "^2.6.4",
    "apollo-link-context": "^1.0.19",
    "apollo-server-express": "^2.14.2",
    "body-parser": "^1.18.3",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.5.5",
    "express": "^4.16.4",
    "fs": "^0.0.1-security",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.9.2",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.13",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "react": "^16.12.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.12.0",
    "react-player": "^1.14.2",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.5",
    "@babel/preset-env": "^7.7.5",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.5",
    "css-loader": "^3.2.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "extract-text-webpack-plugin": "4.0.0-alpha.0",
    "file-loader": "^5.0.2",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "raw-loader": "^4.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
