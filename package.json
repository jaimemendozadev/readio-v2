{
  "name": "readio-v2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clear:build": "rm -rfv ./public/*.png && rm -rfv  ./public/*.css && rm -rfv  ./public/*.js",
    "dev:start": "nodemon index.js",
    "dev:build": "webpack --env.NODE_ENV=development --mode development -w",
    "lint": "eslint --fix server && eslint --fix dev",
    "nu:clear": "yarn run clear:build && rm -rfv node_modules && rm -rfv yarn.lock",
    "prod:build": "webpack --mode production",
    "prettier": "prettier --write '*.{js,jsx,scss,graphql}'",
    "start": "node index.js",
    "validate": "yarn run lint && yarn run prettier './dev' --list-different && yarn run prettier './server' --list-different",
    "heroku-prebuild": "yarn install --production=false",
    "heroku-postbuild": "yarn run prod:build"
  },
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-client": "^2.2.3",
    "apollo-link-context": "^1.0.8",
    "apollo-server-express": "^2.4.8",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "dotenv-webpack": "^1.5.5",
    "express": "^4.16.4",
    "fs": "^0.0.1-security",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.9.2",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.1",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "react": "^16.3.2",
    "react-apollo": "^2.5.2",
    "react-dom": "^16.3.2",
    "react-player": "^1.6.4",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.11",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "extract-text-webpack-plugin": "4.0.0-alpha.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "prettier": "^1.16.4",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  }
}
